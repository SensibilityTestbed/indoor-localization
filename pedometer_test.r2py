dy_import_module_symbols('pedometer.r2py')

HEIGHT = 175


def pedometer_thread(ped):
  def func():
    start_time = getruntime()
    while getruntime() - start_time  < 20:
      time = getruntime()
      try:
        if ped.detect_step(get_sensors(), time, 1):
          log("Stepped\n")
      except:
        stop_sensing()
    stop_sensing()
    log(ped.get_stepcount(),'\n')
    log(ped.get_distance(), '\n')
  return func





start_sensing(1, 0)

pre = PreCalibration(100)
ped = Pedometer(pre,HEIGHT)

createthread(pedometer_thread(ped))

